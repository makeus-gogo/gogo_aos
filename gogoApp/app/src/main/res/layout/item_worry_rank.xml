<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="230dp"
        app:cardCornerRadius="14dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/rank_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/temp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="230dp">

            <View
                android:layout_width="match_parent"
                android:background="@drawable/bg_gradient_black"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/item_worry_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/item_worry_rank_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/item_worry_profile"
                android:text="닉네임"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/item_worry_rank_nickname"
                android:text="님의 고민"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:textSize="12sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/worry_item_txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>