<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.splash.SplashActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고민보다"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textScaleX="1.1"
            android:textColor="@color/main_blue" />

        <TextView
            android:id="@+id/splash_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textScaleX="1.2"
            android:textSize="20sp"
            android:text=" GO"
            android:textStyle="bold"
            android:textColor="@color/main_pink" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/splash_logo"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="-15dp"
            android:layout_toEndOf="@+id/ll_logo"
            android:background="@drawable/bg_circle_35"
            android:src="@drawable/logo_2"
            android:backgroundTint="@color/main_pink"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:src="@drawable/logo_2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_circle_35"
            android:gravity="center"
            android:backgroundTint="@color/main_blue_op">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/logo_1" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>